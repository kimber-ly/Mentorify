<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:background="@drawable/category_list_searchpage_ripple">

        <androidx.cardview.widget.CardView
            android:id="@+id/header_transhistory_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/idtrans_transhistory_card"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20231113-000000001"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


                <TextView
                    android:id="@+id/title_name_transhistory_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Sambas Purnama - "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/idtrans_transhistory_card"
                    app:layout_constraintStart_toStartOf="@id/idtrans_transhistory_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/title_occasion_transhistory_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Mentor Design"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/idtrans_transhistory_card"
                    app:layout_constraintStart_toEndOf="@id/title_name_transhistory_card"
                    />

<!--                <ImageView-->
<!--                    android:id="@+id/status_transhistory"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/wait_approve_icon"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="@id/idtrans_transhistory_card"-->
<!--                    android:background="@drawable/wait_approve_bg"-->
<!--                    />-->

                <TextView
                    android:id="@+id/price_mentor_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="10dp"
                    android:text="Rp.50.000"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/md_theme_light_primary"
                    app:layout_constraintTop_toTopOf="@id/idtrans_transhistory_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/title1_transhistory_card"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package"
            android:textSize="12sp"
            android:textColor="@color/md_theme_light_outlineVariant"
            app:layout_constraintTop_toBottomOf="@id/header_transhistory_card"
            app:layout_constraintStart_toStartOf="@id/header_transhistory_card"/>


        <TextView
            android:id="@+id/package_type_transhistory_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Silver - 60 Min"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/title1_transhistory_card"
            app:layout_constraintStart_toStartOf="@id/title1_transhistory_card"
            />

        <TextView
            android:id="@+id/title2_transhistory_card"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Mentoring"
            android:textSize="12sp"
            android:textColor="@color/md_theme_light_outlineVariant"
            app:layout_constraintTop_toBottomOf="@id/package_type_transhistory_card"
            app:layout_constraintStart_toStartOf="@id/header_transhistory_card"/>


        <TextView
            android:id="@+id/date_transhistory_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="14 November 2023 pukul 20:00 - 21:00"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/title2_transhistory_card"
            app:layout_constraintStart_toStartOf="@id/title1_transhistory_card"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>