<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="2dp"
    android:background="@drawable/search_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/category_list_searchpage_ripple">


        <ImageView
            android:id="@+id/icon_kategori_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/icon_marketing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/label_kategori_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Digital Marketing"
            android:textSize="14sp"
            android:textColor="@color/md_theme_dark_background"
            app:layout_constraintStart_toEndOf="@id/icon_kategori_searchpage"
            app:layout_constraintTop_toTopOf="@id/icon_kategori_searchpage"
            app:layout_constraintBottom_toBottomOf="@id/icon_kategori_searchpage"/>

        <ImageView
            android:id="@+id/icon_arrow_searchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="@id/icon_kategori_searchpage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toEndOf="@id/label_kategori_searchpage"
            app:layout_constraintTop_toTopOf="@id/icon_kategori_searchpage"
            app:layout_constraintVertical_bias="0.518" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>