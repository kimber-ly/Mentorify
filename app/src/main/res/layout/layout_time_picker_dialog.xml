<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih waktu yang tersedia"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Di zona waktu lokal Anda (Asia/Jakarta)\nSlot Waktu tersedia"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/linearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 Am"
                android:textSize="12sp"
                android:background="@drawable/outlined_button2"
                android:textColor="@color/seed"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button2"
                android:text="12:00 Am"
                android:textSize="12sp"
                android:textColor="@color/seed"
                android:layout_marginStart="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button2"
                android:text="14:00 Am"
                android:textSize="12sp"
                android:textColor="@color/seed"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00 Am"
                android:textSize="12sp"
                android:background="@drawable/outlined_button2"
                android:textColor="@color/seed"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button2"
                android:text="20:00 Am"
                android:textSize="12sp"
                android:textColor="@color/seed"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnYes"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>

            <Button
                android:id="@+id/btnNo"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:backgroundTint="#A4A4A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>