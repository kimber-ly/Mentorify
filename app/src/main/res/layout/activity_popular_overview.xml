<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopularOverview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_backOverview"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/baseline_keyboard_arrow_left_24"
                        android:backgroundTint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="120dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_bookmark_border_24"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="90dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_chat"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_mentor"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp"
                android:src="@drawable/tommypoto"/>

            <TextView
                android:id="@+id/nama_mentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tommy Widjaja"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="35dp"
                android:layout_marginTop="230dp"/>

            <TextView
                android:id="@+id/bidang_mentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Development"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginStart="35dp"
                android:layout_marginTop="255dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="285dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/radio_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_Overview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Overview"
                    android:textColor="@color/radio_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/btn_Review1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:text="Review"
                    android:textColor="@color/radio_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <ImageView
                android:layout_marginTop="340dp"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:scaleType="fitXY"
                android:src="@drawable/background_secret"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="360dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="12sp"
                android:layout_marginTop="380dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="440dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="470dp">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expertise :"
                            android:textSize="12sp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                        <Button
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginStart="110dp"
                            android:layout_marginTop="5dp"
                            android:textSize="10sp"
                            android:text="Android Developer"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/garis"
                        android:layout_marginTop="45dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="50dp"
                            android:text="Diciplines :"
                            android:textSize="12sp" />

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="64dp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"
                            android:layout_marginTop="50dp"
                            android:text="Kotlin"
                            android:textSize="10sp" />

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"
                            android:text="Java"
                            android:textSize="10sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="580dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="600dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_education"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gadjah Mada University"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bachelor’s degree, Information systems"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="650dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="675dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_work_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Founder"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gerakan Indonesia Mengajar (Indonesia Teaching Movement)\n2010 - Present"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="725dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_work_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Governor"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Governor Office of DKI Jakarta ・Oct 2017 - Okt 2022"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="780dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_theme_light_secondaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:layout_marginTop="783dp">

                <Button
                    android:id="@+id/btn_checkOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check Availibility"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>