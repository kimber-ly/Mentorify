<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".filter">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_keyboard_arrow_left_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Filter"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/male"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:text="Male"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

                <Button
                    android:id="@+id/female"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:text="Female"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="16sp"
                android:textStyle="bold"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-22dp"
                    android:paddingTop="7dp"
                    android:layout_marginTop="16dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1"
                    android:background="@drawable/outlined_button2"
                    android:progressBackgroundTint="@color/gray"
                    android:progressTint="@color/md_theme_light_primary"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/min"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:text="Min"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

                <Button
                    android:id="@+id/max"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:text="Max"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/first"
                    android:layout_weight="1"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:text="0 - 30K"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

                <Button
                    android:id="@+id/sec"
                    android:layout_weight="1"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:text="30K - 70K"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

                <Button
                    android:id="@+id/third"
                    android:layout_weight="1"
                    android:layout_width="105dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    android:text="70K - 100K"
                    android:textColor="@color/md_theme_light_scrim"
                    android:textSize="12dp"
                    android:background="@drawable/outlined_button2"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Schedule"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="09.00"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/regular_grey_button"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="10.00"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/regular_grey_button"
                    android:layout_marginStart="18dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="11.00"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/regular_grey_button"
                    android:layout_marginStart="18dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@drawable/regular_grey_button"
            android:enabled="true"
            android:text="Show"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>