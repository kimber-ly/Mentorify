<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:background="@drawable/profile_list_ripple">


        <ImageView
            android:id="@+id/image_order_notif_profile_card"
            android:layout_width="94dp"
            android:layout_height="54dp"
            android:src="@drawable/card_orang5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/title_order_notif_profile_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Digital Marketing"
            android:textSize="16sp"
            android:textColor="@color/md_theme_dark_background"
            app:layout_constraintStart_toEndOf="@id/image_order_notif_profile_card"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/id_order_notif_profile_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2311071YC6JWQX"
            android:textSize="14sp"
            android:textColor="@color/md_theme_dark_background"
            app:layout_constraintTop_toBottomOf="@id/title_order_notif_profile_card"
            app:layout_constraintStart_toStartOf="@id/title_order_notif_profile_card"/>
        <TextView
            android:id="@+id/date_order_notif_profile_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="12 - 11 - 2024"
            android:textSize="12sp"
            android:textColor="@color/md_theme_dark_background"
            app:layout_constraintTop_toBottomOf="@id/id_order_notif_profile_card"
            app:layout_constraintStart_toStartOf="@id/title_order_notif_profile_card"/>
        <TextView
            android:id="@+id/time_order_notif_profile_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="16:05"
            android:textSize="10sp"
            android:textColor="@color/md_theme_dark_background"
            app:layout_constraintTop_toBottomOf="@id/date_order_notif_profile_card"
            app:layout_constraintStart_toStartOf="@id/title_order_notif_profile_card"/>

        <ImageView
            android:id="@+id/icon_arrow_order_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="@id/image_order_notif_profile_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toEndOf="@id/title_order_notif_profile_card"
            app:layout_constraintTop_toTopOf="@id/image_order_notif_profile_card"
            app:layout_constraintVertical_bias="0.518" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>