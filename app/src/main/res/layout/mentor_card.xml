<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/category_list_searchpage_ripple">

        <ImageView
            android:id="@+id/image_mentor_card"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:src="@drawable/card_orang5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/name_mentor_card"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Al Ikhsan Akbar"
            android:textSize="14sp"
            android:textStyle="bold|normal"
            app:layout_constraintTop_toBottomOf="@id/image_mentor_card"
            app:layout_constraintStart_toStartOf="@id/image_mentor_card"
            app:layout_constraintEnd_toStartOf="@id/bookmark_icon_mentor_card"/>

        <ImageView
            android:id="@+id/bookmark_icon_mentor_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_bookmark_border_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/name_mentor_card"
            app:layout_constraintTop_toTopOf="@id/name_mentor_card" />

        <ImageView
            android:id="@+id/icon_occasion_mentor_card"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/icon_kerja"
            app:layout_constraintBottom_toTopOf="@id/status_icon_mentor_card"
            app:layout_constraintStart_toStartOf="@id/name_mentor_card" />

        <TextView
            android:id="@+id/occasion_mentor_card"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor Coding"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/icon_occasion_mentor_card"
            app:layout_constraintTop_toTopOf="@id/icon_occasion_mentor_card"/>

        <ImageView
            android:id="@+id/status_icon_mentor_card"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_chat"
            app:layout_constraintBottom_toTopOf="@id/price_mentor_card"
            app:layout_constraintStart_toStartOf="@id/icon_occasion_mentor_card"
            app:layout_constraintEnd_toEndOf="@id/icon_occasion_mentor_card"/>

        <TextView
            android:id="@+id/status_mentor_card"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Sesi (0 penilaian)"
            android:textSize="8sp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/status_icon_mentor_card"
            app:layout_constraintTop_toTopOf="@id/status_icon_mentor_card"
            app:layout_constraintBottom_toBottomOf="@id/status_icon_mentor_card"/>


        <TextView
            android:id="@+id/price_mentor_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Rp.50.000"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/md_theme_light_primary"
            app:layout_constraintStart_toStartOf="@id/name_mentor_card"
            app:layout_constraintBottom_toTopOf="@id/selengkapnya_btn_mentor_card"
            />

        <ImageView
            android:id="@+id/star_icon_mentor_card"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/icon_bintang"
            app:layout_constraintTop_toTopOf="@id/price_mentor_card"
            app:layout_constraintStart_toEndOf="@id/price_mentor_card"
            app:layout_constraintEnd_toStartOf="@id/rate_mentor_card"/>

        <TextView
            android:id="@+id/rate_mentor_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="4.5"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@id/bookmark_icon_mentor_card"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toEndOf="@id/star_icon_mentor_card"
            app:layout_constraintTop_toTopOf="@id/star_icon_mentor_card"
            app:layout_constraintBottom_toBottomOf="@id/star_icon_mentor_card"/>

        <Button
            android:id="@+id/selengkapnya_btn_mentor_card"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="11dp"
            android:text="Selengkapnya"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>